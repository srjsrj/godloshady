@import 'ficon/fontello.css'
@import 'nib'
@import 'normalize'
@import 'b-icon'

clearfix()
    zoom 1
    &:after
    &:before
        content ""
        display table
    &:after
        clear both

html,
body
    height 100%

::-moz-selection 
    background #b3d4fc
    text-shadow none

::selection 
    background #b3d4fc
    text-shadow none

::-webkit-input-placeholder 
   color #999

:-moz-placeholder
   color #999 

::-moz-placeholder
   color #999

:-ms-input-placeholder 
   color #999

hr 
    display block
    height 1px
    border 0
    border-top 1px solid #ccc
    margin 1em 0
    padding 0

audio,
canvas,
img,
svg,
video 
    vertical-align middle

fieldset 
    border 0
    margin 0
    padding 0

textarea 
    resize vertical

.b-body
    font-size 15px
    line-height 1.428
    min-width 940px
    color #333
    background #fff

.b-layout
    width 920px
    margin 0 auto
    clearfix()

.b-btn
    display inline-block
    vertical-align middle
    outline none
    cursor pointer
    border none
    text-decoration none
    &_brown
        border-radius 4px
        border 4px solid #dead75
        color #dead75
        padding 10px 30px
        font-weight 600
        font-size 18px
        text-transform uppercase
        transition border-color .2s ease, color .2s ease, background-color .2s ease
        &:hover
            border-color #86807a
            color #fff
        &:active
            background-color #fff
            border-color #fff
            color #333
        &_bright-bg
            &:hover
                border-color #dead75
                background-color #dead75
        
        &_size-s
            padding 5px 15px
            font-size 15px


.b-sidebar
    position fixed
    top 0
    bottom 0
    left 0
    width 320px
    background #fff
    padding 33px 0 0
    &__contact
        text-align center
        margin 20px 0 0
        &__phone
            text-decoration none
            color #000
            font-weight 600
            font-size 18px
    &__soc
        margin 10px 0 0
        text-align center

.b-soc-link
    font-size 18px
    color #352b21
    display inline-block
    vertical-align top
    transition color .2s ease
    &:hover
        color #dead75

.b-logo
    display block
    text-indent -9999px
    width 156px
    height 173px
    image: '../images/godloshady.png' 156px 173px
    transition opacity .2s ease
    margin 0 auto 41px
    &:hover
        opacity .8

.b-nav
    padding 20px 0
    border 1px solid #d7d5d3
    border-width 1px 0
    margin 0 auto
    width 150px
    &__item
        text-align center
        display block
        color #000
        text-decoration none
        margin 4px 0
        &__name
            display inline-block
            vertical-align top
            text-transform uppercase
            font-size 18px
            font-weight 600
            padding 8px 13px
            border-radius 5px
            transition color .2s ease, background-color .2s ease
        &:hover
            .b-nav__item__name
                color #fff
                background-color #352b21
            


.b-content-wrap
    margin 0 0 0 320px
    max-width 1024px
    padding-right 20px

.b-promo-slider
    &__slide
        &__text
            position absolute
            bottom 50px
            left 45px
            padding 25px 35px
            border 1px solid #fff
            font-weight 600
            color #fff
            text-align center
            text-transform uppercase
            font-size 24px
            &:before
                content ''
                background url(../images/b-promo-slider__slide__text.png)
                position absolute
                bottom 100%
                left 50%
                margin 0 0 0 -56px
                width 122px
                height 49px
    
.b-about
    padding 65px 65px 90px
    background url(../images/b-about.jpg) 100% 100% no-repeat
    background-size cover
    &__title
        font-size 30px
        margin 0 0 25px
        font-weight 800
        text-transform uppercase
    &__text
        max-width 380px
        font-size 15px
        line-height 1.4


.b-gift
    padding 60px 70px
    background-color #352b21
    clerfix()
    overflow hidden
    &__icon
        width 241px
        height 277px
        background url(../images/b-gift__icon-bg.png)
        float left
        &__visual
            width 219px
            height 251px
            margin 13px auto
            display block
            image: '../images/b-gift__icon.png' 219px 251px

            
    &__text
        color #d7d5d3
        margin-left 306px
    &__title
        color #fff
        font-weight 800
        margin 0 0 20px
        text-transform uppercase
        
.b-title
    background-color #000000
    padding 25px 45px
    color #fff
    &__name
        text-transform uppercase
        font-size 30px
        margin 0
        font-weight 300

.b-page-desc
    position relative
    &__img
        width 100%
    &__text
        position absolute
        margin 0
        top 50%
        left 50%
        font-weight 300
        text-align center
        font-size 20px
        border 1px solid #fff
        border-width 1px 0
        padding 20px 15px
        &:before
            content ''
            position absolute
            bottom 100%
            left 50%
            margin 0 0 0 -56px
            width 112px
            height 49px
            background-image url(../images/_l-white.png)

.b-offer__image
    width 243px
    height 280px
    overflow hidden
    position relative
    img
        width 100%
    &:after
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background url(../images/mask.png)

.b-offer
    &-list
        list-style none
        padding 0 0 0 15px
        margin 0
        &__item
            padding 35px 0
            border-top 1px dashed #ebebeb
            &:first-child
                border-top 0
    clearfix()
    &__image
        width 243px
        float left
    &__text
        margin-left 280px
        padding 45px 0 0
        color #6e6964
        p
            margin 0 0 1em
    &__title
        text-transform uppercase
        font-size 21px
        font-weight bold
        margin 0 0 15px
        color #352b21
        border-bottom 1px solid #eae9e8
        display inline-block

.b-horse-list
    list-style none
    padding 0
    margin 40px 0
    font-size 0
    text-align center
    clearfix()
    &__item
        float left
        width 50%
        margin 0 0 20px
        text-align center
        .b-horse
            display inline-block
            vertical-align top

.b-horse
    &__pic
        display block
        width 296px
        height 383px
        background #fff
        position relative
        text-align center
        color #31281d
        transition color .3s ease
        &:hover
            color #b1b1b1
            img
                opacity .8
            &:after
            .b-horse__name 
            .b-horse__info
                transform translateY(5px)
        img
            transition opacity .2s ease
            width 100%
        &:before
            content ''
            position absolute
            z-index 2
            top 0
            left 0
            width 100%
            height 100%
            background url(../images/mask2.png)
        &:after
            content ''
            position absolute
            z-index 3
            bottom 72px
            left -7px
            width 312px
            height 86px
            background url(../images/horse-title.png)
            transition transform .2s ease
    &__name
    &__info
        position absolute
        z-index 4
        bottom 111px
        left 0
        right 0
        margin 0
        transition transform .2s ease
    &__name
        font-size 21px
        text-transform uppercase
        font-weight bold
    &__info
        bottom 90px
        opacity .8
        font-size 13px
    &__owner
        margin 15px 0
        h4
            font-size 15px
            margin 0
            text-transform uppercase
        h5
            font-size 13px
            color #6d6863
            margin 0
            font-weight normal



.b-footer
    border 1px solid #e5e5e5
    font-size 13px
    padding 15px 45px
    text-transform uppercase
    color #b1b1b1
    clearfix()
    a
        color #424242
        text-decoration none
        transition color .2s ease
        .icon-mail
            margin-right 5px
        &:hover
            color #b1b1b1
    &__contact
        float right
        
@import 'bxslider'